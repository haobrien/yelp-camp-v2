<% layout('layouts/boilerplate') %>

<div id="map" style="width: 100%; height: 500px;"></div>

    <h1>All Campgrounds</h1>
    <a href="/campgrounds/new">Add a Campground</a>
    <div>
        <% for(let camp of campgrounds){ %>
            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-4">
                        <% if(camp.images.length){ %>
                            <img src="<%= camp.images[0].url %>" alt="" class="img-fluid">
                        <% } else { %>
                            <img src="https://images.unsplash.com/photo-1550957886-ac45931e5779?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1267&q=80" alt="" class="img-fluid">
                        <% } %>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= camp.title %>
                            </h5>
                            <p class="card-text">
                                <%= camp.description %>
                            </p>
                            <p class="card-text">
                                <small class="text-muted">
                                    <%= camp.location %>
                                </small>
                            </p>
                            <a href="/campgrounds/<%= camp.id %>" class="btn btn-primary">View</a>
                        </div>
                    </div>


                </div>
            </div>
            <% } %>
        </div>

    <script>
        const mapToken = '<%- process.env.MAPBOX_TOKEN %>'
        const campgrounds = {features: <%- JSON.stringify(campgrounds) %>}
    </script>

<script src="/javascript/clustermap.js"></script>