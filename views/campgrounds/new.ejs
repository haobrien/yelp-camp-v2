<% layout('layouts/boilerplate') %>

    <div class="row">
        <h1 class="text-center">Add a Campground</h1>
        <div class="offset-md-3 col-md-6">
            <form action="/campgrounds" method="POST" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" class="form-control" name="campground[title]" id="title" required>
                </div>
                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input type="text" class="form-control" name="campground[location]" id="location" required>
                </div>
                <div class="mb-3">
                    <label for="price" class="form-label">Price</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">$</span>
                        <input type="number" class="form-control" name="campground[price]" id="price" placeholder="0.00"
                            min="0" aria-describedby="price-label" required>
                    </div>
                </div>
                <!-- <div class="mb-3">
                    <label for="image" class="form-label">Image URL</label>
                    <input type="text" class="form-control" name="campground[image]" id="image" required>
                </div> -->
                <div class="mb-3">
                    <label for="image" class="form-label">Images</label>
                    <input class="form-control" type="file" id="image" name="image" multiple>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea type="text" class="form-control" name="campground[description]" id="description"
                        required></textarea>
                </div>
                <div class="mb-3">
                    <button class="btn btn-primary">Add Campground</button>
                </div>
            </form>
                        <a href="/campgrounds">All Campgrounds</a>

        </div>
    </div>