<% layout('layouts/boilerplate') %>
    <div class="row">
        <div class="col-6 ">
            <div class="card mb-5">
                <img src="<%= camp.image %>" class="card-img-top" alt="camp image">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= camp.title %>
                    </h5>
                    <p class="card-text">
                        <%= camp.description %>
                    </p>
                    <!-- <a href="#" class="btn btn-primary">Go somewhere</a> -->
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item text-muted">
                        <%= camp.location %>
                    </li>
                    <li class="list-group-item">
                        Submitted by <%= camp.author.username %>
                    </li>
                    <li class="list-group-item">$<%= camp.price %>/night</li>
                </ul>
                <% if(currentUser && camp.author.equals(currentUser._id)){ %>

                    <div class="card-body">
                        <a href="/campgrounds/<%= camp.id %>/edit" class="btn btn-info">Edit</a>
                        <form class="d-inline" action="/campgrounds/<%= camp.id %>?_method=DELETE" method="POST">
                            <button class="btn btn-danger">Delete</button>
                        </form>
                    </div>

                    <% } %>
                        <div class="card-footer text-center">
                            <a href="/campgrounds">All Campgrounds</a>
                        </div>
            </div>
        </div>
        <div class="col-6">

            <% if(currentUser) { %>
                <h2>Leave a Review</h2>
                <form action="/campgrounds/<%= camp.id %>/reviews" class="mb-3 needs-validation" method="POST"
                    novalidate>
                    <div class="mb-3">
                        <label for="rating">Rating</label>
                        <input type="range" class="form-range" min="1" max="5" name="review[rating]" id="rating"
                            required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="body">Review</label>
                        <textarea class="form-control" name="review[body]" id="body" cols="30" rows="3"
                            required></textarea>
                    </div>
                    <button class="btn btn-primary">Submit</button>
                </form>
                <% } else { %>
                    <h2><a href="/login">Login to Leave a Review</a></h2>
                    <% } %>

                        <% for(let review of camp.reviews) { %>
                            <div class="mb-3">
                                <div class="card">
                                    <div class="card-body">
                                        <h5 class="card-title">
                                            Rating: <%= review.rating %>
                                        </h5>
                                        <p class="card-text">
                                            <%= review.body %>
                                        </p>
                                        <p class="card-subtitle text-muted">
                                            - <%= review.author.username %>
                                        </p>

                                        <% if(currentUser && review.author.equals(currentUser._id)) { %>
                                            <form
                                                action="/campgrounds/<%= camp.id %>/reviews/<%=review.id %>?_method=DELETE"
                                                method="POST">
                                                <button class="btn btn-sm btn-danger">Delete</button>
                                            </form>
                                            <% } %>

                                    </div>
                                </div>
                            </div>

                            <% } %>
        </div>
    </div>